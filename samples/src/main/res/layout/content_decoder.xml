<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DecoderActivity"
    >

  <com.dlazaro66.qrcodereaderview.QRCodeReaderView
      android:id="@+id/qrdecoderview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/result_text_view"
      android:layout_above="@+id/enable_decoding_checkbox" />

  <com.example.qr_readerexample.PointsOverlayView
      android:id="@+id/points_overlay_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/result_text_view"
      android:layout_above="@+id/flashlight_checkbox" />

  <TextView
      android:background="#55000000"
      android:id="@+id/result_text_view"
      android:layout_width="match_parent"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:padding="16dp"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="#55000000"
      android:gravity="center"
      android:padding="16dp"
      android:textColor="#ffffff"
      android:textSize="14sp"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignTop="@+id/imageView2" />

  <CheckBox
      android:background="#99000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="On/Off flashlight"
      android:textSize="14sp"
      android:padding="16dp"
      android:textColor="#ffffff"
      android:id="@+id/flashlight_checkbox"
      android:checked="false"
      android:layout_above="@+id/textView"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true" />

  <CheckBox
      android:background="#99000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="On/Off QR decoding"
      android:textSize="14sp"
      android:padding="16dp"
      android:textColor="#ffffff"
      android:id="@+id/enable_decoding_checkbox"
      android:checked="true"
      android:layout_above="@+id/textView"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/flashlight_checkbox"
      android:layout_toStartOf="@+id/flashlight_checkbox" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="24pt"
      android:layout_height="24pt"
      app:srcCompat="@drawable/scan_200x200"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="18pt"
      android:layout_height="24pt"
      app:srcCompat="@drawable/history_400x400"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true" />

</RelativeLayout>